<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <div class="field">
          <th>名前</th>
          <td>
            <%= f.label "(姓)" %><br>
            <%= f.text_field :family_name, autofocus: true, class: "name" %>
          </td>
          <td>
            <%= f.label "(名)" %><br>
            <%= f.text_field :first_name, autofocus: true, class: "name" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>フリガナ</th>
          <td>
            <%= f.label "(セイ)" %><br>
            <%= f.text_field :family_name_kana, autofocus: true, class: "name" %>
          </td>
          <td>
            <%= f.label "(メイ)" %><br>
            <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>ユーザーネーム</th>
          <td>
            <%= f.label :ユーザーネーム %><br />
            <%= f.email_field :user_name, autofocus: true, autocomplete: "name" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>メールアドレス</th>
          <td>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード</th>
          <td>
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          </t
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード(確認用)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </div>
      </tr>
       <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<t5>既に登録済みの方</t5>
<%= render "user/shared/links" %>からログインしてください。
