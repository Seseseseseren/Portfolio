<% if review.favorited_by?(current_user) %>
  <%= link_to subscription_review_favorites_path(subscription, review), method: :delete do %>
    このレビューを<%= review.favorites.count %>人が参考になったと感じています。
  <% end %>
<% else %>
  <%= link_to subscription_review_favorites_path(subscription, review), method: :post do %>
    このレビューを<%= review.favorites.count %>人が参考になったと感じています。
  <% end %>
<% end %>