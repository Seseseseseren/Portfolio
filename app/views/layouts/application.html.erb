<!DOCTYPE html>
<html>
  <head>
    <title>SubCom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond&text=abcdefghijklmnopqrstuvwxvzABCDEFGHIJKLMNOPQRSTUVWXYZ" rel="stylesheet">
  </head>
  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light p-2">
        <div class="container">
          <a class="navbar-brand" href="/">SubCom</a>
          <button class="navbar-toggler"type="button" data-toggle="collapse"data-target="#navbarSupportedContent"aria-controls="navbarSupportedContent"aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item ml-4"><%= link_to "Home",root_path, class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Subscriptions",subscriptions_path, class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "My page",mypage_users_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Contact",inquiry_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Log out",destroy_user_session_path,method: :delete,class:"nav-link" %></li>
              <% elsif owner_signed_in? %>
                <li class="nav-item ml-4"><%= link_to "Users",owner_users_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Subscriptions",owner_subscriptions_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Genres",owner_genres_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Log out",destroy_owner_session_path,method: :delete,class:"nav-link" %></li>
              <% else %>
                <li class="nav-item ml-4"><%= link_to "Home",root_path, class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "About",about_path, class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Contact",inquiry_path, class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Sign up",new_user_registration_path,class:"nav-link" %></li>
                <li class="nav-item ml-4"><%= link_to "Log in",new_user_session_path,class:"nav-link" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <% if current_page?(root_path) %>
      <main class="mb-auto top">
        <%= yield %>
      </main>
    <% elsif current_page?(about_path) %>
      <main class="mb-auto about">
        <%= yield %>
      </main>
    <% else %>
       <main class="mb-auto">
          <div class="container">
            <%= yield %>
          </div>
        </main>
      <% end %>
    <footer class="py-3">
      <div class="container text-center text-black">
        <p>created by seren</p>
      </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>