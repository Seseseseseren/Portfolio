<div class="container">
 <div class="row">
  <div class="col m-3">
    <h2>サブスク詳細</h2><br>
      <%= flash[:success] %>
      <%= flash[:notice] %>
    <!--jsで呼びだす星の画像-->
    <div style="display: none;">
      <p class="star-on"><%= asset_path('star-on.png') %></p>
      <p class="star-off"><%= asset_path('star-off.png') %></p>
      <p class="star-half"><%= asset_path('star-half.png') %></p>
    </div>
    
    <div class = "col-9 mt-5" >
    	<div class="row">
        <div class="col -5 mt-3" >
          <%= attachment_image_tag @subscription, :subscription_image, :fill, 200, 200  %>
    　　</div>
    　　<div class = "col -5" >
    　　  <table class="table table-hover table-inverse">
         <tr>
           <th>サブスク名</th>
    	     <td><%= @subscription.subscription_name %></td>
         </tr>
         <tr>
    	     <th>ジャンル</th>
    	     <td><%= @subscription.genre.name %></td>
    	   </tr>
    	   <tr>
    	     <th>料金</th>
    	     <td><%= @subscription.subscription_fee.to_s(:delimited) %>円</td>
    	   </tr>
    		 <tr>
    	     <th>支払月</th>
    	     <td>
    	       <%= @subscription.payment_date %>
    	     </td>
    	   </tr>
    	   <tr>
    	     <th>レビュー数</th>
    	     <td>
    	       <%= @subscription.reviews.count%>件
    	     </td>
    	   </tr>
    	   <tr>
    	     <th>平均評価</th>
    	     <td>
           <div class ="star-rate" data-review = <%= @subscription.reviews.average(:rate).to_f.round(1) %>></div>
    	     </td>
    	   </tr>
    	  </table>
    	  </div>
    </div>
   </div>
   <div class="d-flex justify-content-center mb-5">
     <%= link_to "編集する", edit_owner_subscription_path(@subscription), class:'btn-sm btn-success' %>    
     <%= link_to "削除する", owner_subscription_path(@subscription) , method: :delete, "data-confirm" => "本当に削除しますか?",class:'btn-sm btn-danger' %>

   </div>
   </div>
 </div>
</div>
