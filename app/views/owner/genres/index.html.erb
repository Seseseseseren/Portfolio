<div class="container">
  <div class="row">
    <div class="col m-3">
      <h2>ジャンル一覧　/　追加</h2><br>
      <% if flash[:success] %>
        <div class="alert alert-success col-6"><%= flash[:success] %></div>
      <% end %>
      <% if flash[:danger] %>
      <div class="alert alert-danger col-6"><%= flash[:danger] %></div>
      <% end %>
      <div class="my-5 text-left">
        <%= form_with model: @genre, url: owner_genres_path, method: :post, local:true do |f| %>
          <p>
          <%= f.text_field :name, placeholder:"ジャンル名" %>
          <%= f.submit "新規投稿", class:"btn btn-success" %>
          </p>
        <% end %>
      </div>
      <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_owner_genre_path(genre), class:"btn btn-primary" %></td>
            </tr>
            <% end %>
            <%= paginate @genres %>
        </table>
    </div>
  </div>
</div>