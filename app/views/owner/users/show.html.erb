<div class="container">
  <div class="row">
    <div class="col m-10">
      <h2><%= @user.user_name %>さんの会員詳細</h2></br>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @user.family_name %><%= @user.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @user.family_name_kana %><%= @user.first_name_kana %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>登録状況</th>
            <% if @user.is_deleted? == true %>
    	        <td class="text-danger">退会</td>
				    <% else %>
				      <td class="text-success">有効</td>
				    <% end %>
          </tr>
        </tbody>
      </table>
      <div class="text-center mb-3">
      <div class="d-inline-block ml-5">
        <%= link_to '会員一覧に戻る',owner_users_path, class:"btn btn-primary" %>
      </div>
      </div>
    </div>
  </div>
</div>